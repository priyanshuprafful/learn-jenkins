pipeline {
    //  agent any

    // Name based agent
//
//    agent {
//        node { label 'workstation' }
//    }

    agent {
        label 'terraform'
    }

    parameters {
        string(name: 'PERSON', defaultValue: 'MrJenkins' , description: 'Who should I say Hello to ?')
    }

    environment {
        SAMPLE_URL = "google.com"
        SSH = credentials("SSH")
    }
    stages {

        stage("one") {
            when { expression {environment name: 'PERSON' , value:'PRAFFUL'}}
            steps {
                echo "one"
                sh 'env'
            }
        }

        stage("two") {
            input {
                message "Should we continue ?"
                ok "yes, we should."
            }
            steps {
                echo "two"
            }
        }
    }


    post {
        failure {
            echo "Always believe something wonderful will happen"
        }
    }
}